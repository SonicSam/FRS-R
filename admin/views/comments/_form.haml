- error = @comment.errors.include?(:text)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :text, :class => 'control-label'
  .controls
    =f.text_field :text, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:text, :class => 'text-error') : pat(:example)
