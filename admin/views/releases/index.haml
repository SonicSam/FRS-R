%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:releases, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:releases, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    -form_tag url(:releases, :destroy_many), :method => :delete do
                      =hidden_field_tag :release_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:release, :created_at)
        %th.header= mat(:release, :updated_at)
        %th.header= mat(:release, :name)
        %th.header= mat(:release, :filesize)
        %th.header= mat(:release, :numfiles)
        %th.header= mat(:release, :account_ids)
        %th.header.list-row-action-header

    %tbody
      -@releases.each do |release|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'release_ids[]', :value => release.id, :class => 'list-selectable-checkbox'
          %td.list-column=time_ago_in_words release.created_at
          %td.list-column=time_ago_in_words release.updated_at
          %td.list-column=release.name
          %td.list-column=release.filesize
          %td.list-column=release.numfiles
          %td.list-column=release.account_ids
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:releases, :edit, :id => release.id), :rel => :tooltip, :title => "#{pat(:edit)} release", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} release", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "release")
                .popover-content
                  -form_tag url(:releases, :destroy, :id => release.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)